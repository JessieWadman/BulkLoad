<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net8.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <LangVersion>preview</LangVersion>
        <Title>Bulk Load And Merge (BLAM) extensions for EntityFrameworkCore SqlServer </Title>
        <Authors>Jessie Wadman</Authors>
        <Description>Fast and efficient bulk loading of EF Core entities into a mssql database table, using a MERGE statement with optional change detection.</Description>
        <Copyright>Copyright (c) 2022 Jessie Wadman</Copyright>
        <PackageProjectUrl>https://github.com/JessieWadman/BulkLoad</PackageProjectUrl>
        <PackageLicenseUrl>https://github.com/JessieWadman/BulkLoad/blob/main/LICENSE</PackageLicenseUrl>
        <RepositoryUrl>https://github.com/JessieWadman/BulkLoad</RepositoryUrl>
        <RepositoryType>Github</RepositoryType>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\BulkLoad.EntityFrameworkCore.Abstractions\BulkLoad.EntityFrameworkCore.Abstractions.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.EntityFrameworkCore.SqlServer" Version="8.0.0-rc.2.23480.1" />
    </ItemGroup>

</Project>
